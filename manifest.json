{
  "manifest_version": 3,
  "name": "ctcLink Info Extractor",
  "version": "1.0",
  "description": "Extracts name and birth date from ctcLink profile page",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://csprd.ctclink.us/*",
    "https://ptprd.ctclink.us/*",
    "https://gateway.ctclink.us/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://csprd.ctclink.us/*"],
      "js": ["content.js"]
    }
  ]
}
